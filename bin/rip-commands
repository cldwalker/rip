#!/usr/bin/env ruby
## Usage: rip-commands
##
## Prints a list of rip commands (rip-*) to stdout.

commands = []

ENV['PATH'].split(':').each do |path|
  Dir[path + '/rip-*'].each do |f|
    filename = File.basename(f)
    commands << filename.sub('rip-', '')

    if filename =~ /rip-sh-/
      commands << filename.sub('rip-sh-', '')
    end
  end
end

puts commands.uniq.sort
