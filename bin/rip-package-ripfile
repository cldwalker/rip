#!/usr/bin/env ruby
## Usage: rip-package-ripfile FILE

$-e = true

require 'rip/script'

source = ARGV[0]

unless source =~ %r{\.rip$} && File.file?(source)
  exit 3 # Can't handle source
end

$-e = true

require 'rip/script'

rip_io(:package, "w+") do |f|
  File.read(source).each_line { |line| f.write line }
  f.close_write

  f.each_line { |line| print line }
  f.close_read
end
