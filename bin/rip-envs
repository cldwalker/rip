#!/usr/bin/env ruby
## Usage: rip-envs
##
## Prints all ripenvs.

require 'rip/script'

active_envs = ENV['RUBYLIB'].to_s.split(":")

Rip.envs.each do |ripenv|
  if ripenv == Rip.env
    puts "* #{ripenv}"
  elsif active_envs.any? {|e| e == "#{Rip.dir}/#{ripenv}/lib" }
    puts "+ #{ripenv}"
  else
    puts "  #{ripenv}"
  end
end
